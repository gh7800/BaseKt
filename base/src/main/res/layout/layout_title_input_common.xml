<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/layout_input_title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lineBottom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/C666"
        android:textSize="@dimen/sp_16"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/layout_input_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lineBottom"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/layout_input_title"
        android:gravity="right|center_vertical"
        android:background="@null"
        android:textSize="@dimen/sp_14"
        android:paddingRight="@dimen/dp_10"
        android:textColor="@color/C333"
        />
    <View
        android:id="@+id/lineBottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/E1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>